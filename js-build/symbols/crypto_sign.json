{
	"name": "crypto_sign",
	"dependencies": ["_crypto_sign"],
	"type": "function",
	"inputs": [
		{
			"name": "message",
			"type": "unsized_buf"
		},
		{
			"name": "privateKey",
			"type": "buf",
			"size": "libsodium._crypto_sign_secretkeybytes()"
		}
	],
	"outputs": [
		{
			"type": "buf",
			"name": "signature",
			"size": "message.length + libsodium._crypto_sign_bytes()"
		},
		{
			"type": "buf",
			"name": "slen",
			"size": "8"
		}
	],
	"target": "libsodium._crypto_sign(signature_byte, slen_byte, message_byte, message_size, 0, privateKey_byte) | 0",
	"expect": "=== 0",
	"return": "_formatOutput(signature, outputFormat)"
}
